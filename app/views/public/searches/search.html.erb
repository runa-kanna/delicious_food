<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがFoodの時) -->
    <tbody>
      <div class="card-list-container py-5">
        <% @foods.each do |food| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <%= link_to food_path(food.id) do %>
            <%= image_tag food.get_image[0], size:'760x600' %>
          <% end %>
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <%= image_tag food.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %></p>
              </div>
              <div class="col-10">
                <p class="card-title">
                  <%= link_to(food_path(food.id), class:"text-dark") do %>
                    <strong><i class="far fa-flag"></i><span> <%= food.title %></span></strong>
                  <% end %>
                </p>
                <p class="card-text">説明：<%= food.body %></p>
                <span><i class="fas fa-user"></i> By <%= food.user.name %> ｜ </span>
                <span><%= link_to "#{food.comments.count} コメント", food_path(food.id), class:"text-dark" %></span>
                <span>
                  <% if food.favorited_by?(current_user) %>
                    <p>
                      <%= link_to food_favorites_path(food), method: :delete do %>
                        ♥<%= food.favorites.count %> いいね
                      <% end %>
                    </p>
                    <% else %>
                    <p>
                      <%= link_to food_favorites_path(food), method: :post do %>
                        ♡<%= food.favorites.count %> いいね
                      <% end %>
                    </p>
                  <% end %>
              </span>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>  
    </tbody>
  <% end %>
</table>