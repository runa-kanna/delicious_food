<h2>検索結果</h2>

  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <div class="users-content">
      <h2 class="users-title">Users List</h2>
      <div class="users-box">
        <% @users.each do |user| %>
        <table class="users-image">
          <tr>
            <td style="width: 200px">
              <%= link_to user_path(user.id) do %>
                <%= image_tag user.get_profile_image(150,100) %>
              <% end %>
            </td>
            <td class="users-follow">
              <!-- フォロー機能 -->
              <% if current_user != user%>
                <% if current_user.following?(user) %>
                  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-dark" %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-outline-dark" %>
                <% end %>
              <% end %>
            </td>
          </tr>
        </table>
        <div class="users-name">
          User Name：<%= user.name %>
        </div>
        <div class="users-introduction">
          Introduction：<%= user.introduction %>
        </div>
        <% end %>
      </div>
    </div>

  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがFoodの時) -->
    <tbody>
      <div class="card-list-container py-5">
        <% @foods.each do |food| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <%= link_to food_path(food.id) do %>
            <%= image_tag food.get_image[0], size:'760x600' %>
          <% end %>
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <%= image_tag food.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %></p>
              </div>
              <div class="col-10">
                <p class="card-title">
                  <%= link_to(food_path(food.id), class:"text-dark") do %>
                    <strong><i class="far fa-flag"></i><span> <%= food.title %></span></strong>
                  <% end %>
                </p>
                <p class="card-text">説明：<%= food.body %></p>
                <span><i class="fas fa-user"></i> By <%= food.user.name %> ｜ </span>
                <span><%= link_to "#{food.comments.count} コメント", food_path(food.id), class:"text-dark" %></span>
                <span>
                  <% if food.favorited_by?(current_user) %>
                    <p>
                      <%= link_to food_favorites_path(food), method: :delete do %>
                        ♥<%= food.favorites.count %> いいね
                      <% end %>
                    </p>
                    <% else %>
                    <p>
                      <%= link_to food_favorites_path(food), method: :post do %>
                        ♡<%= food.favorites.count %> いいね
                      <% end %>
                    </p>
                  <% end %>
              </span>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>  
    </tbody>
  <% end %>
</table>