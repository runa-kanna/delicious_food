<tbody>
  <tr>
    <td>
      <%= image_tag @user.get_profile_image(100,100) %>
    </td>
    <td>
      <%= @user.name %>
    </td>
    <td>
      <h3><%= @user.introduction %></h3>
    </td>
    <td>
      <p>フォロー中</p>
      <%= link_to @user.followings.count, user_followings_path(@user) %>
      <p>フォロワー</p>
      <%= link_to @user.followers.count, user_followers_path(@user) %>
    </td>
  </tr>
  <tr>
    <td>
      <h3><%= @user.introduction %></h3>
    </td>
  </tr>
</tbody>






<!-- ユーザーの詳細 -->

<div class="container-user">
  <div class="row">
    <div class="col-md-1 border border-dark">
      <%= image_tag @user.get_profile_image(100,100) %>
    </div>
    <div class="col-md-2 border border-dark">
      <%= @user.name %>
    </div>
    <div class="col-md-4 border border-dark">
      <h3><%= @user.introduction %></h3>
    </div>
    <div class="col-md-1 border border-dark">
      <p>フォロー中</p>
      <%= link_to @user.followings.count, user_followings_path(@user) %>
      <p>フォロワー</p>
      <%= link_to @user.followers.count, user_followers_path(@user) %>
    </div>
    <div class="col-md-2 border border-dark">
      <!-- いいね一覧 -->
      <%= link_to "いいねした投稿一覧ページへ飛ぶ", user_favorites_path(@user) %>
    </div>
    <div class="col-md-2 border border-dark">
      <!-- フォロー機能 -->
      <% if current_user != @user%>
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
        <% end %>
      <% end %>
      
      <!-- ゲストログインの場合は編集ボタンを表示しない -->
      <% if @user.name != "guestuser" %>
        <% if current_user == @user%>
          <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>


<!-- ユーザーの投稿一覧 -->

<div class="card-list-container py-5">
  <% @foods.each do |food| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to food_path(food.id) do %>
      <%= image_tag food.get_image[0], size:'760x600' %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag food.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %></p>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(food_path(food.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= food.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= food.body %></p>
          <span><i class="fas fa-user"></i> By <%= food.user.name %> ｜ </span>
          <span><%= link_to "#{food.comments.count} コメント", food_path(food.id), class:"text-dark" %></span>
          <span>
            <% if food.favorited_by?(current_user) %>
              <p>
                <%= link_to food_favorites_path(food), method: :delete do %>
                  ♥<%= food.favorites.count %> いいね
                <% end %>
              </p>
              <% else %>
              <p>
                <%= link_to food_favorites_path(food), method: :post do %>
                  ♡<%= food.favorites.count %> いいね
                <% end %>
              </p>
            <% end %>
        </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>  
