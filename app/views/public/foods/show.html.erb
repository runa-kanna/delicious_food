<h1>投稿詳細</h1>

<div>
  <div id="slider">
    <% @food.images.each do |image| %>
      <%= image_tag(image, width:200) %>
    <% end %>
  </div>

  <p>ショップ名：<%= @food.title %></p>
  <p>説明：<%= @food.body %></p>
  <p>投稿ユーザー画像：<%= image_tag @food.user.get_profile_image(100,100) %></p>
  <p>ユーザーネーム：<%= @food.user.name %></p>
  <p>投稿日：<%= @food.created_at.strftime('%Y/%m/%d') %></p>
  <% if @food.user == current_user %>
    <%= link_to "投稿編集", edit_food_path(@food.id) %></p>
  <% end %>
</div>

<div>
  <% if @food.favorited_by?(current_user) %>
    <p>
      <%= link_to food_favorites_path(@food), method: :delete do %>
        ♥<%= @food.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to food_favorites_path(@food), method: :post do %>
        ♡<%= @food.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
</div>

<div>
  <p>コメント件数：<%= @food.comments.count %></p>
  <% @food.comments.each do |comment| %>
    <p><%= image_tag @food.user.get_profile_image(100,100) %></p>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    <% if comment.user == current_user %>
      <%= link_to "削除", food_comment_path(comment.food, comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@food, @comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
