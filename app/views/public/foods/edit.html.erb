<h1>編集画面</h1>

<%= form_with model: @food, url: food_path(@food.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <label for="inputImage">投稿画像</label>
  <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %>
  <%= f.submit "変更を保存" %>
  <%= link_to "削除", food_path(@food), method: :delete %>

<% end %>