<h1>投稿一覧</h1>

<% @foods.each do |food| %>
<div>
  <%= link_to food_path(food.id) do %>
    <%= image_tag food.get_image[0] %>
  <% end %>

  <p>投稿ユーザー画像：<%= image_tag food.user.get_profile_image(100,100) %></p>
  <p>タイトル:<%= food.title %></p>
  <p>説明:<%= food.body %></p>
  <p>ユーザーネーム:<%= food.user.name %></p>
  <p><%= link_to "#{food.comments.count} コメント", food_path(food.id) %></p>
</div>
<% end %>