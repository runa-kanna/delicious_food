<h1>User詳細</h1>

<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p><%= link_to "プロフィール編集", edit_admin_user_path(@user.id) %></p>
</div>

<!-- ユーザーの投稿一覧 -->

<% @foods.each do |food| %>
<div>
  <p><%= image_tag food.get_image %></p>
  <p>投稿ユーザー画像：<%= image_tag food.user.get_profile_image(100,100) %></p>
  <p>タイトル：<%= food.title %></p>
  <p>説明：<%= food.body %></p>
  <p>ユーザーネーム：<%= food.user.name %></p>
</div>
<% end %>
