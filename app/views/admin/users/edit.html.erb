<h1>User編集ページ</h1>

<%= form_with model: @user, url:admin_user_path(@user) do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputIntroduction">introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

  <p>会員ステータス</p>
    <%= f.radio_button :is_active, :true %><%= f.label :is_active, "有効" %>
    <%= f.radio_button :is_active, :false %><%= f.label :is_active, "退会" %>

  <%= f.submit "変更を保存" %>
<% end %>