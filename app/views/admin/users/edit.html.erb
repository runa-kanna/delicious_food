<div class="cover-user-edit">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">管理者側のプロフィール編集</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @user, url:admin_user_path(@user) do |f| %>
        <div class="form-group">
          <label class="form-label">名前</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class="form-group">
          <label class="form-label">プロフィール画像</label><br>
          <%= f.file_field :profile_image, class: "img_field" %>
        <%= image_tag @user.get_profile_image(200,200), onClick: "$('.img_field').click()", class: "img_prev" %>
      </div>
      <div class="form-group">
        <label class="form-label">プロフィール</label>
        <%= f.text_field :profile, class: "form-control" %><br>
      </div>
      
      <p>会員ステータス</p>
      <%= f.radio_button :is_active, :true %><%= f.label :is_active, "有効" %>
      <%= f.radio_button :is_active, :false %><%= f.label :is_active, "退会" %>

      
      <%= f.submit '保存する', class: "btn btn-success" %>
      <% end %>
      
    </div>
  </div>
</div>